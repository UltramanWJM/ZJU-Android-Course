<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="#cfeaee">

    <ImageButton
        android:id="@+id/btn_ret"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ret_btn"
        android:scaleType="fitCenter"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@mipmap/cao"
        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="爱护环境 熊熊有责"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="终极模范熊"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textColor="#373c3c"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:text="恭喜你成为终极模范熊，请再接再厉吧！"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:text="节约次数: 50/50"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_tree"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="去植树"
        android:layout_gravity="center"
        android:background="@drawable/button_ciecle_shape"/>

</LinearLayout>